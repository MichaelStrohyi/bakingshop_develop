{% extends "AdminBundle::layout.html.twig" %}

{% block title %}Edit Article | {{ parent() }}{% endblock %}

{% block content %}
    <header>
        <h1>Edit Article</h1>
    </header>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'edit-form'}}) }}
    {% if form.vars.value.id != 0 %}
        {{ form_row(form.header) }}
        {{ form_row(form.url) }}
        {{ form_row(form.author) }}
        {{ form_row(form.type) }}
        {{ form_widget(form.logo) }}
        {% if form.vars.value.logo is not null and form.vars.value.logo.filename is not null %}
            <div class="form-group">
                {{ form_label(form.logo) }}
                <div class="col-sm-10">
                    <a href="{{  article_logo_prefix }}/{{ form.vars.value.logo.filename }}" class="fresco" target="_blank"><img class="store-logo" alt="article-logo" src="{{ article_logo_prefix }}/{{ form.vars.value.logo.filename }}"></a>
                    <a href="#" class="btn btn-link btn-sm" onclick="removeLogo(event, this);">Remove logo</a>
                    <input type="text" name="current_logo" hidden>
                </div>
            </div>
        {% endif %}
        {{ form_row(form.metaKeywords) }}
        {{ form_row(form.metaDescription) }}
        <div class="hidden">
            {{ form_row(form.metatags) }}
        </div>
        {{ form_row(form.description) }}
        {{ form_row(form.body) }}
        {{ form_row(form.is_featured) }}
        {{ form_row(form.is_homepage) }}
    {% else %}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'edit-form'}}) }}
        {{ form_row(form.header) }}
        {{ form_row(form.metaKeywords) }}
        {{ form_row(form.metaDescription) }}
        {{ form_row(form.metatags) }}
        <div class="hidden">
            {{ form_row(form.url) }}
            {{ form_row(form.author) }}
            {{ form_row(form.type) }}
            {{ form_widget(form.logo) }}
            {% if form.vars.value.logo is not null and form.vars.value.logo.filename is not null %}
                <div class="form-group">
                    {{ form_label(form.logo) }}
                    <div class="col-sm-10">
                        <a href="{{  article_logo_prefix }}/{{ form.vars.value.logo.filename }}" class="fresco" target="_blank"><img class="store-logo" alt="article-logo" src="{{ article_logo_prefix }}/{{ form.vars.value.logo.filename }}"></a>
                        <a href="#" class="btn btn-link btn-sm" onclick="removeLogo(event, this);">Remove logo</a>
                        <input type="text" name="current_logo" hidden>
                    </div>
                </div>
            {% endif %}
            {{ form_row(form.description) }}
            {{ form_row(form.body) }}
            {{ form_row(form.is_featured) }}
            {{ form_row(form.is_homepage) }}
        </div>
    {% endif %}
        <div class="actions text-right">
            <button type="submit" class="btn btn-danger">Update</button>
            <a href="{{ path('admin_article_index') }}" class="btn btn-default">Cancel</a>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts filter="?jsqueeze" output="js/admin/article.js"
        '@AppBundle/Resources/public/coffee/admin/article.coffee'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
