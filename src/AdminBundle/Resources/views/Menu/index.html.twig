{% extends "AdminBundle::layout.html.twig" %}

{% block title %}Menu | {{ parent() }}{% endblock %}

{% block content %}

    <header>
        <h1>All Menu</h1>
    </header>

    <div>
        <a href="{{ path("admin_menu_create") }}" class="btn btn-default">Create Menu</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Name</th>
                <th>Header</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for menu_type in menu_types %}
                <tr bgcolor="#eee">
                    <td colspan="4">{{ menu_type|capitalize }}-menu block</td>
                    <td>
                        <a href="{{ path("admin_menu_reorder", {type: menu_type}) }}">Reorder</a>
                    </td>
                </tr>
                {% set i = 0 %}
                {% for menu in menu_list %}
                    {% if menu.type == menu_type %}
                    {% set i = i + 1 %}
                        <tr>
                            <td></td>
                            <td>{{ i }}</td>
                            <td>{{ menu.name }}</td>
                            <td>{{ menu.header }}</td>
                            <td>
                                <a href="{{ path("admin_menu_show", {id: menu.id}) }}">Show</a>
                                <a href="{{ path("admin_menu_items", {id: menu.id}) }}">Items</a>
                                <a href="{{ path("admin_menu_delete", {id: menu.id}) }}">Remove</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
