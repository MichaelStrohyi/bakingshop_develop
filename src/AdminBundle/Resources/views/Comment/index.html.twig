{% extends "AdminBundle::layout.html.twig" %}

{% block title %}Comments | {{ parent() }}{% endblock %}

{% block content %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for store in store_list %}
                <tr class="store-type">
                    <td>{{ loop.index }}</td>
                    <td>{{ store.name }}</td>
                    <td><a href="{{ path(store) }}" target="_blank">{{ store.url }}</a></td>
                    <td>
                        <a href="{{ path("admin_store_comments", {id: store.id}) }}">View comments</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}