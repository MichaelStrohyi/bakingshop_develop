{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}Delete Store | {{ parent() }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <header>
            <h1>Do you want to remove Store &lt; {{ store.name }} &gt; ?</h1>
        </header>

        <div class="actions col-md-offset-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="{{ path("admin_store_index") }}" class="btn btn-default">Cancel</a>
        </div>
    {{ form_end(form) }}
{% endblock %}
