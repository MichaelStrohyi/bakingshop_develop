{% extends "::base.html.twig" %}

{% block title %}Admin | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        {% block navigation %}
            <nav class="admin-navigation-menu">
                <ul>
                    <li {{ 'admin_' ~ constant('AppBundle\\Entity\\Article::PAGE_TYPE') in app.request.get('_route') ? 'class="active"' : '' }}><a href="{{ path('admin_article_index')}}">Edit Articles</a></li>
                    <li {{ 'admin_' ~ constant('AppBundle\\Entity\\Menu::PAGE_TYPE') in app.request.get('_route') ? 'class="active"' : '' }}><a href="{{ path('admin_menu_index')}}">Edit Menus</a></li>
                    <li {{ 'admin_' ~ constant('AppBundle\\Entity\\Store::PAGE_TYPE') in app.request.get('_route') ? 'class="active"' : '' }}><a href="{{ path('admin_store_index')}}">Edit Stores</a></li>
                </ul>
            </nav>
            <div class="content">
        {% endblock %}
        {% block content %}{% endblock %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter="scssphp" output="css/admin/app.css"
        "@AppBundle/Resources/public/sass/admin/*.scss"
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}