{% extends ":amplified:base.html.twig" %}

{% block metatags %}
    <link rel="canonical" href="{{ crosslink }}">
{% endblock %}

{% block body %}
    <section class="content">
        <header class="header">
            {% block page_header %}
                {% include 'AppBundle:amplified/layout:_header.html.twig' ignore missing %}
            {% endblock %}
        </header>

        <section class="main-content-block">
            {% block main %}{% endblock %}
        </section>

        <footer class="footer">
            {% block page_footer %}
                {% include 'AppBundle:amplified/layout:_footer.html.twig' ignore missing %}
            {% endblock %}
        </footer>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter="scssphp" output="css/amplified/app.css"
        "@AppBundle/Resources/public/sass/amplified/*.scss"
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts filter="?jsqueeze" output="js/app.js"
        '@AppBundle/Resources/public/coffee/*.coffee'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}